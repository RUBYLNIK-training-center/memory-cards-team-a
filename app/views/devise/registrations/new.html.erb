<h2><%= t("devise.registrations.signup") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email,class:"form-control", placeholder:t("devise.registrations.email"), autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field form-group">
    <% f.label :name %><br />
    <%= f.text_field :name, class:"form-control", placeholder:t("devise.registrations.name") %>
  </div>

  <div class="field form-group">
    <% f.label :surname %><br />
    <%= f.text_field :surname, class:"form-control", placeholder:t("devise.registrations.surname") %>
  </div>
  <div class="field form-group">
    <% f.label :password %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %> </em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control", placeholder:t("devise.registrations.password"), autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:t("devise.registrations.password_confirm"), autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit t("devise.registrations.signup"), class:"btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
